<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <data>

        <record id="view_order_product_pivot_shopify" model="ir.ui.view">
            <field name="name">sale.report.pivot.shopify</field>
            <field name="model">shopify.sale.report</field>
            <field name="arch" type="xml">
                <pivot string="Sales Analysis" disable_linking="True">
                    <field name="shopify_instance_id" type="col"/>
                    <field name="date" interval="month" type="row"/>
                    <field name="price_subtotal" type="measure"/>
                </pivot>
            </field>
        </record>

        <record id="view_order_product_graph" model="ir.ui.view">
            <field name="name">sale.report.graph</field>
            <field name="model">shopify.sale.report</field>
            <field name="arch" type="xml">
                <graph string="Sales Analysis" stacked="True">
                    <field name="shopify_instance_id" type="row"/>
                    <field name="date" interval="month" type="col"/>
                    <field name="price_total" type="measure"/>
                </graph>
            </field>
        </record>

        <!-- Custom reports (aka filters) -->
        <record id="filter_sale_report_sales_funnel" model="ir.filters">
            <field name="name">Sales Funnel</field>
            <field name="model_id">shopify.sale.report</field>
            <field name="domain">['&amp;', ('date','&lt;=', time.strftime('%%Y-12-31')), '&amp;', ('date','&gt;=',time.strftime('%%Y-01-01')),
                '|', ('state','in',('draft','sent')), ('state','not in',('draft','sent','cancel'))]
            </field>
            <field name="user_id" eval="False"/>
            <field name="context">{'group_by': ['state'], 'measures': ['price_total']}</field>
        </record>

        <record id="filter_sale_report_salespersons" model="ir.filters">
            <field name="name">By Salespersons</field>
            <field name="model_id">shopify.sale.report</field>
            <field name="user_id" eval="False"/>
            <field name="context">{'group_by': ['date:month', 'user_id']}</field>
        </record>

        <record id="filter_sale_report_salesteam" model="ir.filters">
            <field name="name">By Salesteam</field>
            <field name="model_id">shopify.sale.report</field>
            <field name="user_id" eval="False"/>
            <field name="context">{'group_by': ['date:month', 'team_id']}</field>
        </record>

        <record id="filter_isale_report_product" model="ir.filters">
            <field name="name">By Product</field>
            <field name="model_id">shopify.sale.report</field>
            <field name="user_id" eval="False"/>
            <field name="context">{'group_by': ['date:month', 'product_id']}</field>
        </record>

        <record id="view_order_product_search" model="ir.ui.view">
            <field name="name">sale.report.search</field>
            <field name="model">shopify.sale.report</field>
            <field name="arch" type="xml">
                <search string="Sales Analysis">
                    <field name="date"/>
                    <field name="partner_id"/>
                    <field name="product_id"/>
                    <field name="user_id"/>

                    <filter string="This Year" name="year" invisible="1"
                            domain="[('date','&lt;=', time.strftime('%%Y-12-31')),('date','&gt;=',time.strftime('%%Y-01-01'))]"/>
                    <filter string="Quotations" name="Quotations" domain="[('state','in',('draft','sent'))]"/>
                    <filter string="Sales" name="Sales" domain="[('state','not in',('draft','sent','cancel'))]"/>
                    <separator/>
                    <filter string="My Sales" name="my_sales" help="My Sales" domain="[('user_id','=',uid)]"/>

                    <group expand="0" string="Extended Filters">
                        <field name="categ_id"/>
                        <field name="company_id" groups="base.group_multi_company"/>
                    </group>
                    <group expand="1" string="Group By">
                        <filter string="Salesperson" name="User" context="{'group_by':'user_id'}"/>
                        <filter string="Sales Team" name="sales_team" context="{'group_by':'team_id'}"/>
                        <filter string="Customer" name="Customer" context="{'group_by':'partner_id'}"/>
                        <filter string="Category of Product" name="Category" context="{'group_by':'categ_id'}"/>
                        <filter string="Instance" name="Instance" context="{'group_by':'shopify_instance_id'}"/>
                        <filter string="Status" name="status" context="{'group_by':'state'}"/>
                        <filter string="Company" name="compnay" groups="base.group_multi_company"
                                context="{'group_by':'company_id'}"/>
                        <separator/>
                        <filter string="Order Month" name="" context="{'group_by':'date:month'}"
                                help="Ordered date of the sales order"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="action_order_report_all" model="ir.actions.act_window">
            <field name="name">Sales Analysis</field>
            <field name="res_model">shopify.sale.report</field>
            <field name="view_mode">pivot,graph</field>
            <field name="search_view_id" ref="view_order_product_search"/>
            <field name="view_id"></field>
            <field name="context">{'search_default_Sales':1, 'group_by_no_leaf':1,'group_by':[]}</field>
            <field name="help">This report performs analysis on your quotations and sales orders. Analysis check your
                sales revenues and sort it by different group criteria (salesman, partner, product, etc.) Use this
                report to perform analysis on sales not having invoiced yet. If you want to analyse your turnover, you
                should use the Invoice Analysis report in the Accounting application.
            </field>
        </record>
        <record id="action_order_instance_report" model="ir.actions.act_window">
            <field name="name">Sales Analysis</field>
            <field name="res_model">shopify.sale.report</field>
            <field name="view_mode">pivot,graph</field>
            <field name="search_view_id" ref="view_order_product_search"/>
            <field name="view_id"></field>
            <field name="domain">[('shopify_instance_id','=',active_id)]</field>
            <field name="context">{'search_default_Sales':1,'group_by_no_leaf':1,'group_by':[]}</field>
            <field name="help">This report performs analysis on your quotations and sales orders. Analysis check your
                sales revenues and sort it by different group criteria (salesman, partner, product, etc.) Use this
                report to perform analysis on sales not having invoiced yet. If you want to analyse your turnover, you
                should use the Invoice Analysis report in the Accounting application.
            </field>
        </record>

		<menuitem id="menu_item_parent_shopify_reporting_ept" name="Reporting"
				  parent="shopify_ept.shopify_instance_menu_item" sequence="18"/>

		<menuitem action="action_order_report_all" id="menu_report_product_all"
				  parent="shopify_ept.menu_item_parent_shopify_reporting_ept" sequence="10"/>
    </data>
</odoo>