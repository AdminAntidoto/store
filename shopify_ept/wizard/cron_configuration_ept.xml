<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!--This is a common view for cron configuration wizard -->
        <record id="shopify_cron_configuration_ept_form_view"
                model="ir.ui.view">
            <field name="name">shopify.cron.configuration.ept.form</field>
            <field name="model">shopify.cron.configuration.ept</field>
            <field name="priority">11</field>
            <field name="arch" type="xml">
                <form string="Manual Queue Process">
                    <sheet>
                        <field name="shopify_instance_id" invisible="1"/>
                        <h2 style="background-color:#806e6e21;">Order Information</h2>
                        <group>
                            <div class="o_setting_left_pane">
                                <div class="row mt16 o_settings_container">
                                    <div class="col-12 o_setting_box">
                                        <div class="o_setting_left_pane">
                                            <field name="shopify_order_auto_import"/>
                                        </div>
                                        <div class="o_setting_right_pane">
                                            <span>
                                                <h6>Import Orders</h6>
                                            </span>
                                            <div class="text-muted">
                                                If checked, It will create a cron job to automatically Import Orders in
                                                Odoo at
                                                certain intervals.
                                            </div>
                                            <br/>

                                            <div attrs="{'invisible': [('shopify_order_auto_import', '=', False)]}">
                                                <div class="content-group">
                                                    <field name="shopify_import_order_interval_number"
                                                           attrs="{'required': [('shopify_order_auto_import', '=', True)]}"
                                                           class="oe_inline mr-1"/>
                                                    <field name="shopify_import_order_interval_type"
                                                           attrs="{'required': [('shopify_order_auto_import', '=', True)]}"
                                                           class="oe_inline mr-1"/>
                                                </div>
                                                <div class="content-group">
                                                    <field name="shopify_import_order_next_execution"
                                                           attrs="{'required': [('shopify_order_auto_import', '=', True)]}"
                                                           class="oe_inline mr-1"/>
                                                    <field name="shopify_import_order_user_id"
                                                           attrs="{'required': [('shopify_order_auto_import', '=', True)]}"
                                                           class="oe_inline mr-1"/>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="o_setting_right_pane">
                                <div class="row mt16 o_settings_container">
                                    <div class="col-12 o_setting_box">
                                        <div class="o_setting_left_pane">
                                            <field name="shopify_order_status_auto_update"/>
                                        </div>
                                        <div class="o_setting_right_pane">
                                            <span>
                                                <h6>Update Order Status</h6>
                                            </span>
                                            <div class="text-muted">
                                                If checked, It will create a cron job to automatically Update Order
                                                Status in
                                                Shopify at
                                                certain intervals.
                                            </div>
                                            <br/>

                                            <div attrs="{'invisible': [('shopify_order_status_auto_update', '=', False)]}">
                                                <div class="content-group">
                                                    <field name="shopify_order_status_interval_number"
                                                           attrs="{'required': [('shopify_order_status_auto_update', '=', True)]}"
                                                           class="oe_inline mr-1"/>
                                                    <field name="shopify_order_status_interval_type"
                                                           attrs="{'required': [('shopify_order_status_auto_update', '=', True)]}"
                                                           class="oe_inline mr-1"/>
                                                </div>
                                                <div class="content-group">
                                                    <field name="shopify_order_status_next_execution"
                                                           attrs="{'required': [('shopify_order_status_auto_update', '=', True)]}"
                                                           class="oe_inline mr-1"/>
                                                    <field name="shopify_order_status_user_id"
                                                           attrs="{'required': [('shopify_order_status_auto_update', '=', True)]}"
                                                           class="oe_inline mr-1"/>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </group>
                        <group>
                            <div class="o_setting_left_pane">
                                <h2 style="background-color:#806e6e21;">Stock Information</h2>
                                <div class="row mt16 o_settings_container">
                                    <div class="col-12 o_setting_box">
                                        <div class="o_setting_left_pane">
                                            <field name="shopify_stock_auto_export"/>
                                        </div>
                                        <div class="o_setting_right_pane">
                                            <span>
                                                <h6>Export Stock</h6>
                                            </span>
                                            <div class="text-muted">
                                                If checked, It will create a cron job to automatically Export Stock in
                                                shopify at
                                                certain intervals.
                                            </div>
                                            <br/>

                                            <div attrs="{'invisible': [('shopify_stock_auto_export', '=', False)]}">
                                                <div class="content-group">
                                                    <field name="shopify_inventory_export_interval_number"
                                                           attrs="{'required': [('shopify_stock_auto_export', '=', True)]}"
                                                           class="oe_inline mr-1"/>
                                                    <field name="shopify_inventory_export_interval_type"
                                                           attrs="{'required': [('shopify_stock_auto_export', '=', True)]}"
                                                           class="oe_inline mr-1"/>
                                                </div>
                                                <div class="content-group">
                                                    <field name="shopify_inventory_export_next_execution"
                                                           attrs="{'required': [('shopify_stock_auto_export', '=', True)]}"
                                                           class="oe_inline mr-1"/>
                                                    <field name="shopify_inventory_export_user_id"
                                                           attrs="{'required': [('shopify_stock_auto_export', '=', True)]}"
                                                           class="oe_inline mr-1"/>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </group>
                        <h2 style="background-color:#806e6e21;">Payout Report Information</h2>
                        <group>
                            <div class="o_setting_left_pane">
                                <div class="row mt16 o_settings_container">
                                    <div class="col-12 o_setting_box">
                                        <div class="o_setting_left_pane">
                                            <field name="shopify_auto_import_payout_report"/>
                                        </div>
                                        <div class="o_setting_right_pane">
                                            <span>
                                                <h6>Auto Import Payout Report</h6>
                                            </span>
                                            <div class="text-muted">
                                                If checked, It will create a cron job to automatically import shopify Payout records
                                                at certain intervals.
                                            </div>
                                            <br/>
                                            <div attrs="{'invisible': [('shopify_auto_import_payout_report', '=', False)]}">
                                                <div class="content-group">
                                                    <field name="shopify_payout_import_interval_number"
                                                           attrs="{'required': [('shopify_auto_import_payout_report', '=', True)]}"
                                                           class="oe_inline mr-1"/>
                                                    <field name="shopify_payout_import_interval_type"
                                                           attrs="{'required': [('shopify_auto_import_payout_report', '=', True)]}"
                                                           class="oe_inline mr-1"/>
                                                </div>
                                                <div class="content-group">
                                                    <field name="shopify_payout_import_next_execution"
                                                           attrs="{'required': [('shopify_auto_import_payout_report', '=', True)]}"
                                                           class="oe_inline mr-1"/>
                                                    <field name="shopify_payout_import_user_id"
                                                           attrs="{'required': [('shopify_auto_import_payout_report', '=', True)]}"
                                                           class="oe_inline mr-1"/>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="o_setting_right_pane">
                                <div class="row mt16 o_settings_container">
                                    <div class="col-12 o_setting_box">
                                        <div class="o_setting_left_pane">
                                            <field name="shopify_auto_generate_bank_statement"/>
                                        </div>
                                        <div class="o_setting_right_pane">
                                            <span>
                                                <h6>Auto Generate Bank Statement</h6>
                                            </span>
                                            <div class="text-muted">
                                                Creates Bank Statement using this journal
                                                while process Settlement
                                                Report
                                            </div>
                                            <br/>
                                            <div attrs="{'invisible': [('shopify_auto_generate_bank_statement', '=', False)]}">
                                                <div class="content-group">
                                                    <field name="shopify_auto_generate_bank_statement_interval_number"
                                                           attrs="{'required': [('shopify_auto_generate_bank_statement', '=', True)]}"
                                                           class="oe_inline mr-1"/>
                                                    <field name="shopify_auto_generate_bank_statement_interval_type"
                                                           attrs="{'required': [('shopify_auto_generate_bank_statement', '=', True)]}"
                                                           class="oe_inline mr-1"/>
                                                </div>
                                                <div class="content-group">
                                                    <field name="shopify_auto_generate_bank_statement_next_execution"
                                                           attrs="{'required': [('shopify_auto_generate_bank_statement', '=', True)]}"
                                                           class="oe_inline mr-1"/>
                                                    <field name="shopify_auto_generate_bank_statement_user_id"
                                                           attrs="{'required': [('shopify_auto_generate_bank_statement', '=', True)]}"
                                                           class="oe_inline mr-1"/>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="o_setting_left_pane">
                                <div class="row mt16 o_settings_container">
                                    <div class="col-12 o_setting_box">
                                        <div class="o_setting_left_pane">
                                            <field name="shopify_auto_process_bank_statement"/>
                                        </div>
                                        <div class="o_setting_right_pane">
                                            <span>
                                                <h6>Auto Process Bank Statement</h6>
                                            </span>
                                            <div class="text-muted">
                                                If checked, It will create a cron job to
                                                automatically process shopify Payout records
                                                at certain intervals.
                                            </div>
                                            <br/>
                                            <div attrs="{'invisible': [('shopify_auto_process_bank_statement', '=', False)]}">
                                                <div class="content-group">
                                                    <field name="shopify_auto_process_bank_statement_interval_number"
                                                           attrs="{'required': [('shopify_auto_process_bank_statement', '=', True)]}"
                                                           class="oe_inline mr-1"/>
                                                    <field name="shopify_auto_process_bank_statement_interval_type"
                                                           attrs="{'required': [('shopify_auto_process_bank_statement', '=', True)]}"
                                                           class="oe_inline mr-1"/>
                                                </div>
                                                <div class="content-group">
                                                    <field name="shopify_auto_process_bank_statement_next_execution"
                                                           attrs="{'required': [('shopify_auto_process_bank_statement', '=', True)]}"
                                                           class="oe_inline mr-1"/>
                                                    <field name="shopify_auto_process_bank_statement_user_id"
                                                           attrs="{'required': [('shopify_auto_process_bank_statement', '=', True)]}"
                                                           class="oe_inline mr-1"/>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </group>
                        <footer>
                            <button string="Save"
                                    class="oe_highlight" type="object" name="save"/>
                            <button string="Cancel" special="cancel"/>
                        </footer>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_wizard_shopify_cron_configuration_ept" model="ir.actions.act_window">
            <field name="name">Scheduled Actions Configuration</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">shopify.cron.configuration.ept</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

    </data>
</odoo>