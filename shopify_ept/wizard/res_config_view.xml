<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_res_config_shopify_instance" model="ir.ui.view">
            <field name="name">Configure Instance</field>
            <field name="model">res.config.shopify.instance</field>
            <field name="arch" type="xml">
                <form string="Configure Instance" class="oe_form_configuration">
                    <group>
                        <group>
                            <field name="name" required="1"/>
                            <field name='shopify_host' required="1"/>
                            <field name='shopify_country_id' required="1"/>
                            <!--<field name='apply_tax_in_order' string="Apply Tax" required="1"/>-->
                            <!--<field name='invoice_tax_account_id'-->
                            <!--attrs="{'invisible': [('apply_tax_in_order', '!=', 'create_shopify_tax')]}"/>-->
                            <!--<field name='credit_tax_account_id'-->
                            <!--attrs="{'invisible': [('apply_tax_in_order', '!=', 'create_shopify_tax')]}"/>-->
                        </group>
                        <group>
                            <field name='shopify_api_key' required="1"/>
                            <field name='shopify_password' required="1" password="1"/>
                            <field name='shopify_shared_secret' required="1"/>
                            <field name='is_image_url' invisible="1"/>
                        </group>
                    </group>
                    <group>
                        <p colspan="2" class="alert alert-warning" role="alert">
                            <div style="color:#ff0000; font-size:15px;">
                                <b>Important Note:</b>
                            </div>
                            <div class="d-inline-block w-100">
                                <div class="row">
                                    <div class="col-11 p-0">
                                        <ul>
                                            <li>
                                                After creating the instance, please make sure you
                                                complete
                                                all the
                                                other
                                                necessary configurations such as Tax, Warehouse,
                                                Pricelist
                                                etc. from
                                                the Shopify
                                                setting screen.
                                            </li>
                                            <li>
                                                Shopify =&gt; Configurations =&gt; Settings
                                            </li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </p>
                    </group>
                    <footer>
                        <button string="Create" type="object" name="shopify_test_connection"
                                class="oe_highlight"/>
                        or
                        <button class="oe_highlight" special="cancel" string="Cancel"/>
                    </footer>
                </form>
            </field>
        </record>
        <record id="res_config_action_shopify_instance" model="ir.actions.act_window">
            <field name="name">Instances</field>
            <field name="res_model">res.config.shopify.instance</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="view_id" ref="view_res_config_shopify_instance"/>
        </record>

